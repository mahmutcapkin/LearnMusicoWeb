@model LearnMusico.Entities.InstrumentCategory

@{
    ViewBag.Title = "Kategori Sil";
}

<section class="breadcumb-area bg-img bg-overlay" style="   background-image: url(../../img/bg-img/breadcumb3.jpg);">
    <div class="bradcumbContent">
        <h2>@ViewBag.Title</h2>
    </div>
</section>

<section class="blog-area section-padding-100">
    <div class="container">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <h4>Enstrüman Kategori Sil</h4>
                <h5>Silmek istediğinize emin misiniz?</h5>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i>Kaldır</button>
                        @* @Bootstrap.Button("danger", string.Empty, "submit", "remove", " Kaldır")*@
                        <a href="/InstrumentCategory/Index" class="btn btn-default btn-sm">
                            <i class="fa fa-arrow-left"></i>Geri Dön
                        </a>
                        @* @Bootstrap.LinkButton("/Category/Index", "default", string.Empty, string.Empty, "arrow-left", " Back to List")*@
                    </div>
                }

            </div>

        </div>

    </div>
</section>