                                    <li><a href="/Sharing/Index">Özel Dersler</a></li>


                                </ul>
                                }
                                
                              
                            <ul >
                                @if (CurrentSession.User == null)
                                {
                                    <li>
                                        <a href="/Home/Login" id="loginBtn"><i class="fa fa-sign-in"></i>Giriş Yap</a>
                                    </li>
                                    <li>
                                        <a href="/Home/Register" id="loginBtn">Kayıt Ol</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="/Home/ShowProfile">@CurrentSession.User.Username</a>
                                        <ul class="dropdown">
                                            <li><a href="index.html">Mesajlarım</a></li>
                                            <li><a href="index.html">Profili Göster</a></li>
                                            <li><a href="index.html">Profili Düzenle</a></li>
                                            <li><a href="index.html">Profili Sil</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="/Home/Logout" id="loginBtn"><i class="fa fa-sign-out"></i>Çıkış</a>
                                    </li>
                                }
                            </ul>


                            </div>
