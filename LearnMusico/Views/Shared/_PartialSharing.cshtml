@foreach (Comment item in Model.comment)
{
    <ul class="list-unstyled">
        <li class="media">
            <img class="mr-3" src="~/img/user/@item.Owner.ProfileImageFilename" width="64" height="64">
            <div class="media-body">
                <div>
                    <span class="col-md-12">
                        <strong class="mt-0 mb-1">@(item.Owner.Name+" "+item.Owner.Surname)(@item.ModifiedUsername)<i class="fa fa-calendar-times ml-5">  @item.ModifiedOn.ToString("dd.MM.yy")</i></strong><br />
                        @item.Text
                    </span>
                    @if (user != null && user.Id == item.Owner.Id)
                    {
                        <span>
                            <small>
                                <button type="button" class="btn btn-warning btn-sm ">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </small>
                        </span>
                    }

                </div>
            </div>
            <hr />
        </li>

