@model LearnMusico.Entities.Instrument

@{
    ViewBag.Title = "Enstrüman Sil";
}

<section class="breadcumb-area bg-img bg-overlay" style="   background-image: url(../../img/bg-img/breadcumb3.jpg);">
    <div class="bradcumbContent">
        <h2>@ViewBag.Title</h2>
    </div>
</section>


<section class="login-area section-padding-100">
    <div class="container">

        <h3>Enstrüman bilgisini silmek istediğinize emin misiniz?</h3>
        <div>
            <h4>Enstrüman</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.InstrumentCategory.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InstrumentCategory.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.InstrumentName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InstrumentName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-primary" /> |
                    @Html.ActionLink("Geri Dön", "Index",null,new {@class="btn btn-default" })
                </div>
            }
        </div>
    </div>
</section>