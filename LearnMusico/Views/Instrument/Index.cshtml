@model IEnumerable<LearnMusico.Entities.Instrument>

@{
    ViewBag.Title = "Enstrümanlar";
}

<section class="breadcumb-area bg-img bg-overlay" style="   background-image: url(../../img/bg-img/breadcumb3.jpg);">
    <div class="bradcumbContent">
        <h2>@ViewBag.Title</h2>
    </div>
</section>


<section class="login-area section-padding-100">
    <div class="container">

        <p>
            @Html.ActionLink("Enstrüman Ekle", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InstrumentCategory.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstrumentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstrumentCategory.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstrumentName)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            if (item.Description.Length > 200)
                            {
                                @Html.Raw(item.Description.Substring(0, 200) + "...")
                            }
                            else
                            {
                                @Html.Raw(item.Description)
                            }
                        }


                    </td>
                    <td width="250">
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>