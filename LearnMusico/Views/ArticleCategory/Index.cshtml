@model IEnumerable<LearnMusico.Entities.ArticleCategory>

@{
    ViewBag.Title = "Kategoriler";
}

<section class="breadcumb-area bg-img bg-overlay" style="   background-image: url(../../img/bg-img/breadcumb3.jpg);">
    <div class="bradcumbContent">
        <h2>@ViewBag.Title</h2>
    </div>
</section>

<section class="login-area section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

                <p>
                    @*@Bootstrap.LinkButton("/Category/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")*@
                    <a href="/ArticleCategory/Create" class="btn btn-default">
                        <i class="fa fa-plus"></i>Kategori Ekle
                    </a>
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedUsername)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedUsername)
                            </td>
                            <td>
                                <a href="/ArticleCategory/Edit/@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                    <i class="fa fa-edit"></i>Düzenle
                                </a>
                                @* @Bootstrap.LinkButton("/Category/@*Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)*@
                                <a href="/ArticleCategory/Details/@item.Id" class="btn btn-info btn-sm" title="Details">
                                    <i class="fa fa-search"></i>Detaylar
                                </a>
                                @* @Bootstrap.LinkButton("/Category/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)*@
                                <a href="/ArticleCategory/Delete/@item.Id" class="btn btn-danger btn-sm" title="Delete">
                                    <i class="fa fa-trash"></i>Kaldır
                                </a>
                                @* @Bootstrap.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)*@
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>


    </div>
</section>


        

